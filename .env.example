# ==========================================
# CareerFlow Environment Variables Template
# ==========================================
# Copy this file to .env.local and update the values
# Never commit .env.local to version control

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# SQLite database file path (relative to project root)
DATABASE_PATH=./data/careerflow.db

# Database connection options
DB_TIMEOUT=5000
DB_MEMORY_LIMIT=100000000

# ==========================================
# AUTHENTICATION & SECURITY
# ==========================================

# JWT secret for token signing (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your-super-secret-jwt-key-here-replace-with-random-256-bit-key

# Session secret for iron-session (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
SESSION_SECRET=your-session-secret-here-replace-with-random-512-bit-key

# Session configuration
SESSION_COOKIE_NAME=careerflow-session
SESSION_MAX_AGE=86400
SESSION_SECURE=false

# Password hashing rounds (10-12 recommended for production)
BCRYPT_ROUNDS=12

# ==========================================
# ADMIN CONFIGURATION
# ==========================================

# Default admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=@Ww55683677wW@
ADMIN_EMAIL=info@careerflow.com
ADMIN_PHONE=+96555683677

# Admin session timeout (in seconds)
ADMIN_SESSION_TIMEOUT=3600

# ==========================================
# APPLICATION SETTINGS
# ==========================================

# Application base URL (used for absolute URLs)
NEXT_PUBLIC_APP_URL=http://localhost:4444

# Application port configuration
PORT=4444

# Application name and branding
NEXT_PUBLIC_APP_NAME=CareerFlow
NEXT_PUBLIC_APP_TAGLINE=Your Future Dashboard

# Default language and supported locales
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,ar

# ==========================================
# CONTACT INFORMATION
# ==========================================

# Public contact information (displayed on website)
NEXT_PUBLIC_CONTACT_EMAIL=info@careerflow.com
NEXT_PUBLIC_CONTACT_PHONE=+96555683677
NEXT_PUBLIC_CONTACT_WHATSAPP=+96555683677
NEXT_PUBLIC_CONTACT_ADDRESS=Kuwait City, Kuwait

# Support information
NEXT_PUBLIC_SUPPORT_EMAIL=support@careerflow.com
NEXT_PUBLIC_SUPPORT_PHONE=+96555683677

# ==========================================
# FILE UPLOAD SETTINGS
# ==========================================

# Maximum file size in bytes (5MB = 5242880)
MAX_FILE_SIZE=5242880

# Allowed file types for uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# Upload directory (relative to public folder)
UPLOAD_DIR=uploads

# Maximum files per application
MAX_FILES_PER_APPLICATION=5

# ==========================================
# RATE LIMITING
# ==========================================

# API rate limiting configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Contact form rate limiting
CONTACT_RATE_LIMIT=5
CONTACT_RATE_WINDOW=3600000

# Application submission rate limiting
APPLICATION_RATE_LIMIT=3
APPLICATION_RATE_WINDOW=3600000

# ==========================================
# EMAIL CONFIGURATION (Optional)
# ==========================================

# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email templates
EMAIL_FROM=noreply@careerflow.com
EMAIL_FROM_NAME=CareerFlow

# ==========================================
# EXTERNAL SERVICES (Optional)
# ==========================================

# Google Analytics (if using)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Maps API (if using)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Cloudinary (if using for image optimization)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================

# Environment mode
NODE_ENV=development

# Debug mode
DEBUG=false

# Enable development features
DEV_MODE=true

# Hot reload settings
FAST_REFRESH=true

# ==========================================
# PRODUCTION SETTINGS
# ==========================================

# Production-specific settings (uncomment for production)
# NODE_ENV=production
# DEBUG=false
# DEV_MODE=false
# SESSION_SECURE=true
# NEXT_PUBLIC_APP_URL=https://your-domain.com

# ==========================================
# LOGGING CONFIGURATION
# ==========================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file paths
LOG_FILE=logs/application.log
ERROR_LOG_FILE=logs/error.log

# Enable console logging
CONSOLE_LOGGING=true

# ==========================================
# PERFORMANCE SETTINGS
# ==========================================

# Cache settings
CACHE_TTL=3600
STATIC_CACHE_TTL=86400

# Image optimization
IMAGE_QUALITY=80
IMAGE_FORMATS=webp,jpg,png

# Bundle optimization
BUNDLE_ANALYZER=false
SOURCE_MAPS=false

# ==========================================
# SECURITY HEADERS
# ==========================================

# Content Security Policy
CSP_ENABLED=true

# HSTS settings
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true

# X-Frame-Options
X_FRAME_OPTIONS=DENY

# ==========================================
# BACKUP CONFIGURATION
# ==========================================

# Backup settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=data/backups

# ==========================================
# MONITORING & ANALYTICS
# ==========================================

# Error tracking (if using Sentry)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Performance monitoring
PERFORMANCE_MONITORING=true

# User analytics (privacy-compliant)
ANALYTICS_ENABLED=false

# ==========================================
# FEATURE FLAGS
# ==========================================

# Enable/disable features
FEATURE_APPLICATIONS=true
FEATURE_FEATURED_JOBS=true
FEATURE_ADMIN_PANEL=true
FEATURE_CONTACT_FORM=true
FEATURE_MULTILINGUAL=true

# Experimental features
EXPERIMENTAL_FEATURES=false

# ==========================================
# API CONFIGURATION
# ==========================================

# API versioning
API_VERSION=v1

# API timeout settings
API_TIMEOUT=30000

# API pagination defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ==========================================
# WEBHOOK CONFIGURATION (Optional)
# ==========================================

# Webhook settings for integrations
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=10000

# External webhook URLs
SLACK_WEBHOOK_URL=your-slack-webhook-url
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# ==========================================
# TESTING CONFIGURATION
# ==========================================

# Test database (for testing environment)
TEST_DATABASE_PATH=./data/test-careerflow.db

# Test settings
TEST_TIMEOUT=30000
TEST_HEADLESS=true
TEST_SLOW_MO=0

# ==========================================
# DEPLOYMENT CONFIGURATION
# ==========================================

# Deployment platform
DEPLOYMENT_PLATFORM=vercel

# Build settings
BUILD_TIMEOUT=600
BUILD_MEMORY=3008

# Health check settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# ==========================================
# LOCALIZATION SETTINGS
# ==========================================

# Date and time formatting
DATE_FORMAT=DD/MM/YYYY
TIME_FORMAT=HH:mm
TIMEZONE=Asia/Kuwait

# Currency settings
CURRENCY=KWD
CURRENCY_SYMBOL=د.ك

# Number formatting
NUMBER_FORMAT=en-US

# ==========================================
# SOCIAL MEDIA INTEGRATION (Optional)
# ==========================================

# Social media links
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/careerflow
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/careerflow
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/careerflow
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/careerflow

# Social media API keys (if needed)
FACEBOOK_APP_ID=your-facebook-app-id
TWITTER_API_KEY=your-twitter-api-key
LINKEDIN_CLIENT_ID=your-linkedin-client-id

# ==========================================
# DATA MIGRATION SETTINGS (September 2025)
# ==========================================

# Enable automatic data migration on startup
AUTO_MIGRATE_DATA=true

# Migration settings for JSON to Database sync
MIGRATE_EMAIL_SUBSCRIBERS=true
MIGRATE_CONTACT_MESSAGES=true

# Backup before migration
BACKUP_BEFORE_MIGRATION=true

# ==========================================
# CUSTOM CONFIGURATION
# ==========================================

# Add your custom environment variables here
# CUSTOM_VARIABLE=value

# ==========================================
# NOTES
# ==========================================

# 1. Replace all placeholder values with actual values
# 2. Generate secure random keys for JWT_SECRET and SESSION_SECRET
# 3. Use strong passwords for admin accounts
# 4. Set appropriate file size limits based on your needs
# 5. Configure rate limiting based on expected traffic
# 6. Enable HTTPS and secure cookies in production
# 7. Set up proper logging and monitoring for production
# 8. Configure backups for production databases
# 9. Use environment-specific values for different deployments
# 10. Never commit sensitive information to version control

# ==========================================
# SECURITY CHECKLIST
# ==========================================

# ✅ JWT_SECRET is a strong random key (256-bit)
# ✅ SESSION_SECRET is a strong random key (512-bit)
# ✅ Admin password is strong and unique
# ✅ File upload restrictions are properly configured
# ✅ Rate limiting is enabled and configured
# ✅ HTTPS is enabled in production (SESSION_SECURE=true)
# ✅ Debug mode is disabled in production
# ✅ Sensitive data is not logged
# ✅ Database is properly secured
# ✅ Regular security updates are applied
